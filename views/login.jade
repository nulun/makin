extends layout

block content
  .container
    h1 登陆
    p.lead 欢迎回来
    br
    form(role='form', action="/login",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="username", placeholder='用户名')
      .form-group
        input.form-control(type='password', name="password", placeholder='密码')
      button.btn.btn-primary(type='submit') 登陆
      &nbsp;
      a(href='/')
        button.btn.btn-default(type="button") 取消

